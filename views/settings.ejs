<%- include partials/header %>

<!-- Invisible element for communicating info with the backend ===================== -->
<div class="invisible">
  <form class="" action="/user/<%= currentUser._id %>/sound?_method=PUT" method="post">
    <input id="alarmSoundInput" type="number" name="alarmSoundInput" value="<%= currentUser.alarmSound %>">
    <input id="pomoUpSoundInput" type="number" name="pomoUpSoundInput" value="<%= currentUser.pomoUpSound %>">
    <button id="submit-sound-form"type="submit" name="button"></button>
  </form>
</div>


<h1 class="display-4 text-center mb-5">Settings</h1>


<div class="card time-card mx-auto text-center card-size">
  <form class="" action="/user/<%= currentUser._id %>/time?_method=PUT" method="post">

    <div class="card-header bg-secondary text-light">
      <h3>Customize Time</h3>
    </div>

    <label class="mt-3" for="pomo-min">Pomo Rounds (min)</label>
    <input id="pomo-min" class="form-control form-control-lg mx-auto mb-4" type="number" name="pomoMin" value=<%= currentUser.pomoMin %> min="1" required>

    <label for="break-min">Regular Breaks (min)</label>
    <input id="break-min" class="form-control form-control-lg mx-auto mb-4" type="number" name="breakMin" value=<%= currentUser.breakMin %> min="1" required>

    <label for="long-break-min">Long Breaks (min)</label>
    <input id="long-break-min" class="form-control form-control-lg mx-auto mb-4" type="number" name="longBreakMin" value=<%= currentUser.longBreakMin %> min="1" required>

    <button id="reset-btn" class="btn btn-sm py-0 my-4 btn-outline-dark" type="button" name="button">Restore Defaults</button>

    <div class="text-center">
      <button class="btn btn-primary my-3 btn-lg" type="submit" name="button">Save Settings</button>
    </div>
  </form>
</div>

<!-- Sound Options ==========================================================-->

<!-- Alarm sound card ========================-->
<div class="alarmSounds card card-size my-4 mx-auto">
  <h3 class="card-header bg-secondary text-light text-center">Times Up Alarm Sound</h3>

    <div class="d-flex flex-column mx-auto my-2">

      <label for="">
        <input type="radio" name="alarmSound" value="Default">
         Default
      </label>

      <label for="">
        <input type="radio" name="alarmSound" value="Drop">
         Drop
      </label>

      <label for="">
        <input type="radio" name="alarmSound" value="Frog">
         Frog
      </label>

      <label for="">
        <input type="radio" name="alarmSound" value="Holiday">
         Holiday
      </label>

      <label for="">
        <input type="radio" name="alarmSound" value="Horse">
         Horse
      </label>

      <label for="">
        <input type="radio" name="alarmSound" value="Spring">
         Spring
      </label>

    </div>

    <div class="text-center mb-3">
      <button id="test-alarm-btn" class="btn btn-outline-secondary btn-sm" type="button" name="button">
        <i class="fas fa-music mr-1"></i> Test Sound
      </button>
    </div>

    <div class="text-center mb-3">
      <button id="submit-sound-btn" class="btn btn-primary btn-lg" type="button" name="button">
        Save Settings
      </button>
    </div>

</div>


